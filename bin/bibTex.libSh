function vis_bibTexProvider_run {
    G_funcEntry
    function describeF {  G_funcEntryShow; cat  << _EOF_
_EOF_
    }
    EH_assert [[ $# -eq 1 ]]
    
    local thisOne="$1"

    if [ ! -r "${thisOne}" ] ; then
        EH_problem "Missing or Unreadable ${thisOne}"
        lpReturn 101
    fi

    local thisPrefix=$( FN_prefix ${thisOne} )
    local thisExtension=$( FN_extension ${thisOne} )

    local bibtexProgram=$( which bibtex )
    local biberProgram=$( which biber )

    if  grep -q '^\\usepackage{biblatex}' "${thisOne}" ; then
        if [ -z "${biberProgram}" ] ; then
            EH_problem "Missing biber program"
            lpReturn 101
        fi
        opDo "${biberProgram}" "${thisPrefix}"
    elif grep -q '^\\bibliographystyle{' "${thisOne}" ; then
        if [ -z "${bibtexProgram}" ] ; then
            EH_problem "Missing bibtex program"
            lpReturn 101
        fi
        opDo "${bibtexProgram}" "${thisPrefix}"
    else
        ANT_cooked "No bib features detected -- running of bibtex SKIPPED"
    fi

    lpReturn
}

